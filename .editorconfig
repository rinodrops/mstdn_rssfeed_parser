# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 4

# Two-space indentation for YAML
[*.yml, *.yaml]
indent_style = space
indent_size = 2

# Tab indentation for Makefile, cxx, sh
[Makefile, *.cxx, *.c++, *.hxx, *.h++, *.c, *.h, *.sh]
indent_style = tab
indent_size = 4